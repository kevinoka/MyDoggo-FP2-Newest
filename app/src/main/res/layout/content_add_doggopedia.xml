<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddDoggopedia"
    tools:showIn="@layout/activity_add_doggopedia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/choose_image"
                android:onClick="imageClicked"
                android:id="@+id/ImageAddDoggopedia"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:paddingTop="20dp"
                android:paddingBottom="60dp"
                android:background="@color/colorGreyLine"
                app:srcCompat="@drawable/ic_add_a_photo_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:textAlignment="center"
                android:text="Add your picture"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:text="Dog type"/>

        <EditText
            android:id="@+id/TypeAddDoggopedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:inputType="text|textCapSentences"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Dog description"/>

        <EditText
            android:id="@+id/DescAddDoggopedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text|textCapSentences"/>

    </LinearLayout>

</ScrollView>